local RainbowUI = {}
RainbowUI.__index = RainbowUI

local function rainbowColor(speed, sat, val)
    sat = sat or 1
    val = val or 1
    return Color3.fromHSV((tick() * speed) % 1, sat, val)
end

function RainbowUI:CreateWindow(width, height)
    width, height = width or 230, height or 120

    local sg = Instance.new("ScreenGui")
    sg.Name = "RainbowUI"
    sg.ResetOnSpawn = false
    sg.IgnoreGuiInset = true
    if syn and syn.protect_gui then syn.protect_gui(sg) end
    sg.Parent = game:GetService("Players").LocalPlayer.PlayerGui

    local frame = Instance.new("Frame")
    frame.Name = "MainFrame"
    frame.Size = UDim2.new(0, width, 0, height)
    frame.Position = UDim2.fromOffset(160, 180)
    frame.BackgroundTransparency = 1
    frame.Parent = sg

    local borders = {}
    for _,side in ipairs({"Top","Bottom","Left","Right"}) do
        local f = Instance.new("Frame")
        f.Parent = frame
        f.Name = side
        f.BorderSizePixel = 0
        f.ZIndex = 3
        if side=="Top" then
            f.Size, f.Position = UDim2.new(1,0,0,2), UDim2.new(0,0,0,-2)
        elseif side=="Bottom" then
            f.Size, f.Position = UDim2.new(1,0,0,2), UDim2.new(0,0,1,0)
        elseif side=="Left" then
            f.Size, f.Position = UDim2.new(0,2,1,0), UDim2.new(0,-2,0,0)
        elseif side=="Right" then
            f.Size, f.Position = UDim2.new(0,2,1,0), UDim2.new(1,0,0,0)
        end
        f.BackgroundColor3 = Color3.fromRGB(255,0,0)
        table.insert(borders, f)
    end

    local bg = Instance.new("Frame")
    bg.Name = "BG"
    bg.BackgroundColor3 = Color3.fromRGB(12, 13, 21)
    bg.BorderSizePixel = 0
    bg.Size = UDim2.new(1,0,1,0)
    bg.Position = UDim2.new(0,0,0,0)
    bg.ZIndex = 1
    bg.Parent = frame

    local bar = Instance.new("Frame")
    bar.Name = "Bar"
    bar.BackgroundColor3 = Color3.fromRGB(20, 20, 32)
    bar.Size = UDim2.new(1, 0, 0, 26)
    bar.BorderSizePixel = 0
    bar.Parent = bg
    bar.ZIndex = 2

    -- Bot√≥n flotante para mostrar el HUD si est√° oculto
    local floatBtn = Instance.new("TextButton")
    floatBtn.Name = "FloatBtn"
    floatBtn.Text = "üòà"
    floatBtn.Size = UDim2.new(0, 36, 0, 36)
    floatBtn.Position = UDim2.new(0, 12, 0, 60)
    floatBtn.BackgroundColor3 = Color3.fromRGB(45, 0, 55)
    floatBtn.Visible = false
    floatBtn.BorderSizePixel = 0
    floatBtn.TextSize = 24
    floatBtn.Font = Enum.Font.GothamBold
    floatBtn.TextColor3 = Color3.fromRGB(255, 180, 255)
    floatBtn.Parent = sg
    floatBtn.ZIndex = 6

    -- T√≠tulo
    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Size = UDim2.new(1, -60, 1, 0)
    title.Position = UDim2.new(0, 28, 0, 0)
    title.BackgroundTransparency = 1
    title.Text = "SCRIPTüòàLUIS"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 19
    title.TextStrokeTransparency = 0.8
    title.TextColor3 = Color3.fromRGB(255,255,255)
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Parent = bar
    title.ZIndex = 3

    local hideBtn = Instance.new("TextButton")
    hideBtn.Name = "HideBtn"
    hideBtn.Text = "‚úñ"
    hideBtn.Size = UDim2.new(0, 22, 0, 22)
    hideBtn.AnchorPoint = Vector2.new(1, 0.5)
    hideBtn.Position = UDim2.new(1, -8, 0.5, 0)
    hideBtn.BackgroundColor3 = Color3.fromRGB(42, 0, 20)
    hideBtn.BorderSizePixel = 0
    hideBtn.TextSize = 14
    hideBtn.Font = Enum.Font.GothamBold
    hideBtn.TextColor3 = Color3.fromRGB(255,100,100)
    hideBtn.Parent = bar
    hideBtn.ZIndex = 4
    hideBtn.AutoButtonColor = true

    local scroll = Instance.new("ScrollingFrame")
    scroll.Name = "Options"
    scroll.Size = UDim2.new(1, -12, 1, -34)
    scroll.Position = UDim2.new(0, 6, 0, 28)
    scroll.BackgroundColor3 = Color3.fromRGB(24, 24, 36)
    scroll.BackgroundTransparency = 0.02
    scroll.BorderSizePixel = 0
    scroll.ScrollBarThickness = 5
    scroll.ScrollingDirection = Enum.ScrollingDirection.Y
    scroll.CanvasSize = UDim2.new(0,0,0,0)
    scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
    scroll.ZIndex = 2
    scroll.Parent = bg

    local uiList = Instance.new("UIListLayout")
    uiList.Parent = scroll
    uiList.SortOrder = Enum.SortOrder.LayoutOrder
    uiList.Padding = UDim.new(0,4)

    game:GetService("RunService").RenderStepped:Connect(function()
        for i,rf in ipairs(borders) do
            rf.BackgroundColor3 = rainbowColor(0.39 + (i*0.07), 1, 1)
        end
    end)

    -- MOVIBLE SOLO CON EL TEXTO DEL T√çTULO
    local dragging, dragInput, dragStart, startPos
    title.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = true
                end
            end)
        end
    end)
    title.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if dragging and input == dragInput then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(
                0, math.clamp(startPos.X.Offset + delta.X, 0, game:GetService("Workspace").CurrentCamera.ViewportSize.X - frame.Size.X.Offset),
                0, math.clamp(startPos.Y.Offset + delta.Y, 0, game:GetService("Workspace").CurrentCamera.ViewportSize.Y - frame.Size.Y.Offset)
            )
        end
    end)

    -- Bot√≥n para esconder el HUD
    hideBtn.MouseButton1Click:Connect(function()
        frame.Visible = false
        floatBtn.Visible = true
        floatBtn.Position = UDim2.new(0, frame.Position.X.Offset, 0, frame.Position.Y.Offset)
    end)

    -- Bot√≥n flotante "üòà"
    floatBtn.MouseButton1Click:Connect(function()
        frame.Visible = true
        floatBtn.Visible = false
    end)

    local api = setmetatable({
        _sg = sg,
        _hud = frame,
        _scroll = scroll,
        _window = frame
    }, RainbowUI)
    return api
end

function RainbowUI:AddButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Text = "  "..(text or "Bot√≥n")
    btn.Size = UDim2.new(1, -8, 0, 23)
    btn.BackgroundColor3 = Color3.fromRGB(32,32,50)
    btn.BorderSizePixel = 0
    btn.Font = Enum.Font.GothamSemibold
    btn.TextSize = 14
    btn.TextColor3 = Color3.fromRGB(210,210,255)
    btn.AutoButtonColor = true
    btn.ZIndex = 4
    btn.Parent = self._scroll
    btn.MouseButton1Click:Connect(function()
        if callback then pcall(callback) end
    end)
    return btn
end

function RainbowUI:Destroy()
    if self._sg then self._sg:Destroy() end
end

function RainbowUI:Notify(text, duration)
    duration = duration or 2
    local sg = self._sg or game:GetService("Players").LocalPlayer.PlayerGui:FindFirstChild("RainbowUI")
    if not sg then return end
    local notif = Instance.new("TextLabel")
    notif.Text = tostring(text)
    notif.Size = UDim2.new(0, 280, 0, 32)
    notif.AnchorPoint = Vector2.new(0.5, 0)
    notif.Position = UDim2.new(0.5, 0, 0, 34)
    notif.BackgroundColor3 = Color3.fromRGB(35,35,45)
    notif.BorderSizePixel = 0
    notif.Font = Enum.Font.GothamSemibold
    notif.TextSize = 16
    notif.TextColor3 = Color3.new(1,1,1)
    notif.TextStrokeTransparency = 0.7
    notif.Parent = sg
    notif.ZIndex = 999
    notif.BackgroundTransparency = 0.18
    notif.TextTransparency = 0
    notif.TextStrokeColor3 = Color3.fromRGB(0,0,0)
    notif.ClipsDescendants = true

    -- Rainbow border arriba
    local border = Instance.new("Frame")
    border.Parent = notif
    border.Size = UDim2.new(1,0,0,3)
    border.Position = UDim2.new(0,0,0,0)
    border.BackgroundColor3 = Color3.fromHSV((tick()*0.47)%1,1,1)
    border.BorderSizePixel = 0
    border.ZIndex = notif.ZIndex + 1

    local rs = game:GetService("RunService")
    local conn
    conn = rs.RenderStepped:Connect(function()
        if border.Parent then
            border.BackgroundColor3 = Color3.fromHSV((tick()*0.47)%1,1,1)
        else
            conn:Disconnect()
        end
    end)

    spawn(function()
        wait(duration)
        for i=1,8 do
            notif.TextTransparency = i*0.1
            notif.BackgroundTransparency = 0.18 + i*0.09
            border.BackgroundTransparency = i*0.12
            wait(0.03)
        end
        notif:Destroy()
    end)
end

return RainbowUI
